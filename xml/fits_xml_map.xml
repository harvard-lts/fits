<fitsXmlMap>

	<tool name="jhove">
		<mime type="all">
			<element name="colorSpace">
				<map from="Greyscale" to="Grayscale"/>
			</element>
		</mime>
	</tool>

	<tool name="exiftool">
		<mime type="all">
			<element name="samplingFrequencyUnit">
				<map from="None" to="no absolute unit of measurement"/>
				<map from="inches" to="in."/>
				<!--  cm is output correctly -->
			</element>
			<element name="captureDevice">
				<map from="Film Scanner" to="transmission scanner"/>
				<map from="Reflection Print Scanner" to="reflection print scanner"/>
				<map from="Digital Camera" to="digital still camera"/>
			</element>
			<element name="exposureProgram">
				<map from="Not Defined" to="Not defined"/>
				<map from="Program AE" to="Normal program"/>
				<map from="Aperture-priority AE" to="Aperture priority"/>
				<map from="Shutter speed priority AE" to="Shutter priority"/>
				<map from="Creative (Slow speed)" to="Creative program (biased toward depth of field)"/>
				<map from="Action (High speed)" to="Action program (biased toward fast shutter speed)"/>
				<map from="Portrait" to="Portrait mode (for closeup photos with the background out of focus)"/>
				<map from="Landscape" to="Landscape mode (for landscape photos with the background in focus)"/>
			</element>
			<element name="meteringMode">
				<map from="Center-weighted average" to="Center weighted average"/>
				<map from="Multi-spot" to="Multispot"/>
				<map from="Evaluative" to="Pattern"/>
				<map from="Multi-segment" to="Pattern"/>
			</element>
			<element name="lightSource">
				<map from="Unknown" to="unknown"/>
				<map from="Tungsten" to="Tungsten (incandescent light)"/>
				<map from="Cloudy" to="Cloudy weather"/>
				<map from="Daylight Fluorescent" to="Daylight fluorescent (D 5700 - 7100K)"/>
				<map from="Day White Fluorescent" to="Day white fluorescent (N 4600 - 5400K)"/>
				<map from="Cool White Fluorescent" to="Cool white fluorescent (W 3900 - 4500K)"/>
				<map from="White Fluorescent" to="White fluorescent (WW 3200 - 3700K)"/>
				<map from="ISO Studio Tungsten" to="ISO studio tungsten"/>
				<map from="Other" to="other light source"/>
			</element>
			<element name="flash">
				<map from="No Flash" to="Flash did not fire"/>
				<map from="Fired" to="Flash fired"/>
				<map from="Fired, Return not detected" to="Strobe return light light not detected"/>
				<map from="Fired, Return detected" to="Strobe return light detected"/>
				<map from="On, Fired" to="Flash fired, compulsory flash mode"/>
				<map from="On, Return not detected" to="Flash fired, compulsory flash mode, return light not detected"/>
				<map from="On, Return detected" to="Flash fired, compulsory flash mode, return light detected"/>
				<map from="Off, Did not fire" to="Flash did not fire, compulsory flash mode"/>
				<map from="Auto, Did not fire" to="Flash did not fire, auto mode"/>
				<map from="Auto, Fired" to="Flash fired, auto mode"/>
				<map from="Auto, Fired, Return not detected" to="Flash fired, auto mode, return light not detected"/>
				<map from="Auto, Fired, Return detected" to="Flash fired, auto mode, return light detected"/>
				<map from="Fired, Red-eye reduction" to="Flash fired, red-eye reduction mode"/>
				<map from="Fired, Red-eye reduction, Return not detected" to="Flash fired, red-eye reduction mode, return light not detected"/>
				<map from="Fired, Red-eye reduction, Return detected" to="Flash fired, red-eye reduction mode, return light detected"/>
				<map from="On, Red-eye reduction" to="Flash fired, compulsory flash mode, red-eye reduction mode"/>
				<map from="On, Red-eye reduction, Return not detected" to="Flash fired, compulsory flash mode, red-eye reduction mode, return light not detected"/>
				<map from="On, Red-eye reduction, Return detected" to="Flash fired, compulsory flash mode, red-eye reduction mode, return light detected"/>
				<map from="Auto, Fired, Red-eye reduction" to="Flash fired, auto mode, red-eye reduction mode"/>
				<map from="Auto, Fired, Red-eye reduction, Return not detected" to="Flash fired, auto mode, return light not detected, red-eye reduction mode"/>
				<map from="Auto, Fired, Red-eye reduction, Return detected" to="Flash fired, auto mode, return light detected, red-eye reduction mode"/>
			</element>
			<element name="sensingMethod">
				<map from="One-chip color area" to="One-chip color area sensor"/>
				<map from="Two-chip color area" to="Two-chip color area sensor"/>
				<map from="Three-chip color area" to="Three-chip color area sensor"/>
				<map from="Color sequential area" to="Color sequential area sensor"/>
				<map from="Trilinear" to="Trilinear sensor"/>
				<map from="Color sequential linear" to="Color sequential linear sensor"/>
			</element>
			<element name="gpsLatitudeRef">
				<map from="North" to="N"/>
				<map from="South" to="S"/>
			</element>
			<element name="gpsLongitudeRef">
				<map from="East" to="E"/>
				<map from="West" to="W"/>
			</element>
			<element name="gpsStatus">
				<map from="Measurement Active" to="A"/>
				<map from="Measurement Void" to="V"/>
			</element>
			<element name="gpsImgDirectionRef">
				<map from="True North" to="T"/>
				<map from="Magnetic North" to="M"/>
			</element>
			<element name="gpsTrackRef">
				<map from="True North" to="T"/>
				<map from="Magnetic North" to="M"/>
			</element>
			<element name="gpsDestBearingRef">
				<map from="True North" to="T"/>
				<map from="Magnetic North" to="M"/>
			</element>
			<element name="YCbCrPositioning">
				<map from="Centered" to="1"/>
				<map from="Co-sited" to="2"/>
			</element>
		</mime>
	</tool>

	<tool name="NLNZ Metadata Extractor">
		<mime type="all">
			<element name="flash">
				<map from="No Flash" to="Flash did not fire"/>
				<map from="Fired" to="Flash fired"/>
				<map from="Fired, Return not detected" to="Strobe return light light not detected"/>
				<map from="Fired, Return detected" to="Strobe return light detected"/>
				<map from="On, Fired" to="Flash fired, compulsory flash mode"/>
				<map from="On, Return not detected" to="Flash fired, compulsory flash mode, return light not detected"/>
				<map from="On, Return detected" to="Flash fired, compulsory flash mode, return light detected"/>
				<map from="Off, Did not fire" to="Flash did not fire, compulsory flash mode"/>
				<map from="Auto, Did not fire" to="Flash did not fire, auto mode"/>
				<map from="Auto, Fired" to="Flash Fired, auto mode"/>
				<map from="Auto, Fired, Return not detected" to="Flash fired, auto mode, return light not detected"/>
				<map from="Auto, Fired, Return detected" to="Flash fired, auto mode, return light detected"/>
				<map from="Fired, Red-eye reduction" to="Flash fired, red-eye reduction mode"/>
				<map from="Fired, Red-eye reduction, Return not detected" to="Flash fired, red-eye reduction mode, return light not detected"/>
				<map from="Fired, Red-eye reduction, Return detected" to="Flash fired, red-eye reduction mode, return light detected"/>
				<map from="On, Red-eye reduction" to="Flash fired, compulsory flash mode, red-eye reduction mode"/>
				<map from="On, Red-eye reduction, Return not detected" to="Flash fired, compulsory flash mode, red-eye reduction mode, return light not detected"/>
				<map from="On, Red-eye reduction, Return detected" to="Flash fired, compulsory flash mode, red-eye reduction mode, return light detected"/>
				<map from="Auto, Fired, Red-eye reduction" to="Flash fired, auto mode, red-eye reduction mode"/>
				<map from="Auto, Fired, Red-eye reduction, Return not detected" to="Flash fired, auto mode, return light not detected, red-eye reduction mode"/>
				<map from="Auto, Fired, Red-eye reduction, Return detected" to="Flash fired, auto mode, return light detected, red-eye reduction mode"/>
			</element>
		</mime>
	</tool>
	
	<tool name="mediainfo">
		<mime type="all">
			<element name="colorSpace">
				<map from="Greyscale" to="Grayscale"/>
			</element>
			<element name="mimetype">
                <map from="video/mp4" to="video/quicktime"/>
			</element>
			<element name="identity">
				<attribute name="format">
                <map from="mjp2" to="JPEG 2000"/>
				</attribute>
			</element>
			<element name="format">
                <map from="mjp2" to="JPEG 2000"/>
                <map from="MXF" to="Material Exchange Format (MXF)"/>
			</element>
		</mime>
	</tool>	


